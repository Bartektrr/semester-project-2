<!DOCTYPE html>
<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/stylesheets/institutions.css" rel="stylesheet">
    <link href="/stylesheets/navbar.css" rel="stylesheet">
  </head>
  <body>
    <%- include('./partials/navbar.ejs') %> 
    <h2 class="p-3">Charity institutions:</h2>
    <div class="list-group">
      <div class="row px-3 py-1 w-100">
        <span class="col py-1 bg-info">Name</span>
        <span class="col py-1 bg-info">Money</span>
      </div>
    <% institutions.forEach(function(institution) { %>
        <div class="row px-3 py-1 w-100">
          <span class="col py-1 bg-light"><%=institution.Name%></span>
          <span class="col py-1 bg-light"><%=institution.Money%></span>
          <button onclick="deleteInstitution('/institutions','<%=institution.id%>')" class="col btn btn-secondary">DELETE</button>  
          <button onclick="updateInstitution('/institutions','<%=institution.id%>')" class="col btn btn-secondary">DONATE</button>  
        </div>
      <% }); %>
    </div>
    <button name="addInstitution" onclick="addInstitution('/institutions')"  class="btn btn-success"> ADD INSTITUTION</button>  
    <script src="../javascripts/deleteInstitution.js"></script> 
    <script src="../javascripts/updateInstitution.js"></script> 
    <script src="../javascripts/addInstitution.js"></script> 
  </body>
</html>
